= form_for [@poll, @question] do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} "
      %ul{class: "alert alert-danger"}
        - @question.errors.full_messages.each do |msg|
          .container
            %li= msg

  .form-group
    = f.label :title
    = f.text_field :title, class: 'form-control'
  .form-group
    = f.label :kind
    = f.select :kind, options_for_select(ApplicationHelper::QUESTION_KINDS)
  .form-group
    = f.fields_for :possible_answers do |a|
      %p= a.text_field :title, class: 'form-control', placeholder: "Enter a choice for your multiple choice question"
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
